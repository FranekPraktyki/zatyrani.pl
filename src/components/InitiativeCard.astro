---
interface Props {
  title: string;
  description: string;
  schedule: string;
  image: string;
  imageClass?: string; // Optional prop for custom image class
}

const { title, description, schedule, image, imageClass = 'h-full' } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
  <a 
    href={image} 
    target="_blank" 
    rel="noopener noreferrer" 
    class="block">
    <img 
      src={image} 
      alt="" 
      class={`w-full object-cover ${imageClass}`} 
    />
  </a>
  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-2xl font-bold mb-4">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <p class="text-purple-600 font-semibold">{schedule}</p>
  </div>
</article>